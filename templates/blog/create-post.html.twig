{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<div class="container" >
    <div class="row">
        <form class="col s12" action="{{path("create-post")}}" method="POST" enctype="multipart/form-data" >
            <div class="row">
                <label for="title">Title</label>
                <input required name="title" id="title" type="text" class="validate">
            </div>
            <div class="row">
                <label for="textarea1">Content</label>
                <textarea id="textarea1" name="content" required class="materialize-textarea"></textarea>
            </div>
            <div class="row">
                <span>Article cover</span>
                <input type="file" required id="picture" name="picture">
                <!--<input class="file-path validate" type="text">-->
            </div>
            <button type="submit" name="action">Submit</button>
        </form>
    </div>
</div>

{% endblock %}
