{% extends 'base.html.twig' %}

{% block title %}Ultimate Blog - Homepage{% endblock %}

{% block body %}
<main>
    <div class="container">
        <div class="blog-header">
                <h1 class="color_title" class="blog-title">Welcome on Ultimate Blog Industrialisation</h1>
                <p class="lead blog-description">Blog built with Symfony 4, styled in Bootstrap, Sup'internet.</p>
            </div>
        {% for article in post %}
            <div class="row">
                <div class="col-md-12 blog-main">
                    <div class="blog-post">
                        <a href="{{path("show_post",{"id": article.id}) }}">
                            <h2 class="blog-post-title">{{article.title}}</h2>
                        </a>
                        <h6>Created by {{article.users.username}}, at {{article.createdAt|date("m/d/Y")}}</h6>
                        <div class="display_home">
                            <a class="flex" href="{{path("show_post",{"id": article.id}) }}">
                                <img class="size_home_img" src="{{asset('static/images/article/'~ article.picture)}}" alt="placeholder">
                            </a>
                            <br>
                            <p>{{article.content}}</p>
                            <a href="{{path("show_post",{"id": article.id}) }}">
                                <h5 class="blog-post-title">Read more</h2>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <hr>
        {% endfor %}
    </div>
</main>

{% endblock %}
