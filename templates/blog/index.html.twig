{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<main>
    <h1> Test </h1>
    {% for article in post %}
        <div>
            <a href="{{path("show_post",{"id": article.id}) }}" class="gallery-cover gray" style="height: 350px;">
                <img src="{{asset('static/images/article/'~ article.picture)}}" alt="placeholder">
            </a>
            <p>{{article.title}}</p>
        </div>
        
    {% endfor %}
</main>

{% endblock %}
