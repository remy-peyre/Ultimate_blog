{% extends 'base.html.twig' %}

{% block title %}Ultimate Blog - Profil{% endblock %}

{% block body %}
    <div class="container container_height">
        <div class="row">
            <form class="flex_form" action="{{ path('profil') }}" method="POST">
                <div class="row size_row">
                    <div class="display_form">
                        <label for="first_name">First Name</label>
                        <input required placeholder="{{ user.firstname }}" name="firstname" id="first_name" type="text" class="validate">
                    </div>
                </div>
                <div class="row size_row">
                    <div class="display_form">
                        <label for="last_name">Last Name</label>
                        <input required placeholder="{{ user.lastname }}" name="lastname" id="last_name" type="text" class="validate">
                    </div>
                </div>
                <div class="row size_row">
                    <div class="display_form">
                        <label for="password">Password</label>
                        <input required id="password" name="password" type="password" class="validate">
                    </div>
                </div>
                <div class="row size_row">
                    <div class="display_form">
                        <label for="username">Username</label>
                        <input required id="username" placeholder="{{ user.username }}" name="username" type="text" class="validate">
                    </div>
                </div>
                <button class="btn btn-primary" type="submit" name="action">Submit</button>
            </form>
        </div>
    </div>
{% endblock %}